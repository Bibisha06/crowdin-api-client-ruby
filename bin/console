#!/usr/bin/env ruby

require 'bundler/setup'
require 'crowdin-api'

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

@crowdin = Crowdin::Client.new do |config|
  config.api_token = 'YOUR_API_TOKEN'
  config.logger = true
end

# or Enterprise

@e_crowdin = Crowdin::Client.new do |config|
  config.api_token = 'YOUR_ENTERPRISE_API_TOKEN'
  config.organization_domain = 'YOUR_ORGANIZATION_DOMAIN'
  config.logger = true
end

require 'irb'
IRB.start
